<?xml version="1.0"?>
<config>
    <modules>
        <Bcash_Pagamento>
            <version>1.0.0</version>
        </Bcash_Pagamento>
    </modules>

    <global>
        <helpers>
            <pagamento>
                <class>Bcash_Pagamento_Helper</class>
            </pagamento>
        </helpers>

        <blocks>
            <pagamento>
                <class>Bcash_Pagamento_Block</class>
            </pagamento>

            <pagamento_adminhtml>
                <class>Bcash_Pagamento_Block_Adminhtml</class>
            </pagamento_adminhtml>

            <adminhtml>
                <rewrite>
                    <sales_order_view>Bcash_Pagamento_Block_Adminhtml_Sales_Order_View</sales_order_view>
                    <sales_order_grid>Bcash_Pagamento_Block_Adminhtml_Sales_Order_Grid</sales_order_grid>
                </rewrite>
            </adminhtml>
        </blocks>

        <models>
            <pagamento>
                <class>Bcash_Pagamento_Model</class>
            </pagamento>
        </models>                
    </global>
    
    <admin>
        <routers>
            <pagamento>
                <use>admin</use>
                <args>
                    <module>Bcash_Pagamento</module>
                    <frontName>pagamento</frontName>
                </args>
            </pagamento>
        </routers>
    </admin>

    <adminhtml>
        <events>
            <nothing_to_do_here_yet> 
                <observers>
                    <pagamento> 
                        <type>model</type> 
                        <class>pagamento/observer</class> 
                        <method>checkOrderState</method> 
                        <args></args>
                    </pagamento>
                </observers>
            </nothing_to_do_here_yet>
        </events>
    </adminhtml> 

    <default>
        <payment>
            <pagamento>
                <active>1</active>
                <model>pagamento/paymentMethod</model>
                <title>Bcash</title>
                <allowspecific>0</allowspecific>
            </pagamento>
        </payment>
    </default>

    <frontend>
        <routers>
            <pagamento>
                <use>standard</use>
                <args>
                    <module>Bcash_Pagamento</module>
                    <frontName>pagamento</frontName>
                </args>
            </pagamento>
        </routers>
    </frontend>

</config>

